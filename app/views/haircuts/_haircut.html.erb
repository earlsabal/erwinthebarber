<div class="container text-center">
	<h2><%= haircut.name %></h2>
	<p><%= haircut.description %></p>
	<div class="row no-gutter popup-gallery">
		<%= render haircut.pics %>
	</div>
	<% if admin_signed_in? %>
		<p>
		  <%= link_to 'Edit', edit_haircut_path(haircut) %> |
		  <%= link_to 'Delete', haircut_path(haircut), :method => :delete, 
		    data: {confirm: "Are you sure you want to delete this haircut?"} %> |
		  <%= link_to 'New Pic', new_haircut_pic_path(haircut) %>
		</p>
	<% end %>
</div>