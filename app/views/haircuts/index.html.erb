<header>
  <div class="header-content">
    <div class="header-content-inner">
      <h1 id="homeHeading" class="outline">Portfolio</h1>
      <hr>
      <p class="outline">Haircuts I have done</p>
      <a href="#haircuts" class="btn btn-primary btn-xl page-scroll">See Haircuts</a>
    </div>
  </div>
</header>

<div id="haircuts">
	<% @haircuts.each_with_index do |haircut, i| %>
		<% if i % 2 == 0 %>
			<section>
				<%= render haircut %>
			</section>
		<% else %>
			<section class="bg-dark">
				<%= render haircut %>
			</section>
		<% end %>
	<% end %>
</div>