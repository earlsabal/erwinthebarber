<header>
  <div class="header-content">
    <div class="header-content-inner">

      <h1 id="homeHeading" class="outline"><%= haircuts_desc.title %></h1>
      <hr>
      <p class="outline">
        <%= haircuts_desc.body %>
        <% if admin_signed_in? %>    
          <br>
          <%= link_to 'Edit Haircut Header', edit_description_path(haircuts_desc), :method => :get %>
        <% end %>
      </p>

      <a href="#haircuts" class="btn btn-primary btn-xl page-scroll"><%= haircut_btn.body %></a>
      <% if admin_signed_in? %>    
        <br>
        <%= link_to 'Edit Haircut Button', edit_button_path(haircut_btn), :method => :get %>
      <% end %>

    </div>
  </div>
</header>

<% if @haircuts %>
	<div id="haircuts">
		<% @haircuts.each_with_index do |haircut, i| %>
			<% if i % 2 == 0 %>
				<section>
					<%= render haircut %>
				</section>
			<% else %>
				<section class="bg-dark">
					<%= render haircut %>
				</section>
			<% end %>
		<% end %>
	</div>
<% end %>
