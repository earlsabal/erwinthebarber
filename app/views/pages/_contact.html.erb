<section id="contact">
  <div class="container">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2 text-center">
        <h2 class="section-heading"><%= contact_desc.title %></h2>
        <hr class="primary">
        <p>
          <%= contact_desc.body %>
          <% if admin_signed_in? %>    
            <br>
            <%= link_to 'Edit Contact', edit_description_path(contact_desc), :method => :get %>
          <% end %>
        </p>
        <br>
      </div>
    </div>

    <div class="row text-center">

      <div class="col-md-4">
        <i class="fa fa-phone fa-3x sr-contact"></i>
        <p>
          <%= find_phone %>
          <% if admin_signed_in? %>    
            <br>
            <%= link_to 'Edit Phone', edit_information_path(phone_info), :method => :get %>
          <% end %>    
        </p>
      </div>
      
      <div class="col-md-4">
        <i class="fa fa-map-marker fa-3x sr-contact"></i>
        <p><%= find_address.number_street %></p>
        <p>
          <%= find_address.city_state %>
          <% if admin_signed_in? %>    
            <br>
            <%= link_to 'Edit Address', edit_address_path(find_address), :method => :get %>
          <% end %>
        </p>  
      </div>

      <div class="col-md-4">
        <i class="fa fa-envelope-o fa-3x sr-contact"></i>
        <p>
          <a href="mailto:<%= find_email %>"><%= find_email %></a>
          <% if admin_signed_in? %>    
            <br>
            <%= link_to 'Edit Email', edit_information_path(email_info), :method => :get %>
          <% end %>
        </p>
      </div>
      
    </div>
  </div>
</section>