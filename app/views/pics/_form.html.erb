<% if @errors %>
	<% @errors.each do |message| %>
		<%= message %>
	<% end %>
<% end %>

<div class="outline">	
	<%= form_for [haircut, pic] do |f| %>

		<p>
    	<%= f.file_field :image, :class => "input-file" %>
		</p>

	  <p> 
	    <%= f.label :title %><br>
	    <%= f.text_field :title, :class => "input-text" %>
	  </p>

	  <p>   
	    <%= f.label :body %><br>
	    <%= f.text_area :body, :class => "input-text"  %>
	  </p>

	  <%= f.hidden_field :haircut_id, value: haircut.id %>

	  <%= f.button :submit, :class => "btn btn-primary btn-xl" %>
	<% end %>
</div>